data base lab_07

create table city (
  id bigint primary key,
  name varchar(255)
)

create table street (
  id bigint primary key,
  name varchar(255),
  city_id bigint
)

ALTER TABLE IF EXISTS public.city
    ADD COLUMN comment character varying(255);

insert into city values (1, 'Казань', 'Столица Республики Татарстан'),
(2, 'Ульяновск', 'Административный центр Ульяновской области' ),
(3, 'Чистополь', 'Административный центр Чистопольского района')

insert into street values (1, 'А. Кутуя', 1), (2, 'Пушкина', 1),
(3, 'Ленина', 2), (4, '50 лет Октября', 2), (5, 'Пр. Мира', 3), (6, 'Горького', 3)